		polegadas = num1 * 12
		jardas = num1 * 3
		milhas = num1 * 1760
		
		escreva("\n a)Polegadas : \n", polegadas)
		escreva("\n b)Jardas : \n", jardas)
		escreva("\n c)Milhas : \n", milhas)
		
		
		
	}
}
